@model List<AvailableDoctorAppointmentViewModel>
@{
    ViewData["Title"] = "FindAppointment";
    Layout = "~/Views/Shared/_LayoutMHRS.cshtml";
}
<div style="background-color:#ffffff; border-radius: 18px;">
    <div class="container-fluid">
        <div class="col-md-12" style=" border-radius: 12px; padding: 30px; min-height: calc(100vh - 300px);">
            <div class="row col-md-12" style="font-size:20px">
                <span><a asp-controller="Patient" asp-action="Appointment"><i class="fa fa-arrow-left" style="color:black"></i></a>&emsp;Randevu Listesi</span>
                @* Randevu al ve geri butonu *@
            </div>
            <div class="row col-md-12" style="display: flex; flex-direction: column;">
                <form asp-controller="Patient" asp-action="FindAppointmentHours" method="post">
                    <span>&ensp;</span>
                    <span>&ensp;</span>
                    <div class="list-group">

                        @foreach (var item in Model)
                        {
                            <a asp-controller="Patient" asp-action="FindAppointmentHours" asp-route-hcid="@item.HospitalClinicId" class="list-group-item list-group-item-action col-md-12" style=" display: flex; justify-content: space-between; height:60px; align-items:center;">
                                <span class="col-md-2">
                                    <i class="fa fa-user-md" aria-hidden="true" style="transform:scale(1.5)"></i>&ensp;
                                    @item.Doctor.AppUser.Name
                                    @item.Doctor.AppUser.Surname
                                </span>
                                <strong class="col-md-2">
                                    @*<span>En Erken Tarih</span><br />*@
                                    <i class="fa fa-calendar-check-o" aria-hidden="true" style="transform:scale(1.3)"></i>
                                    <span style="background: #fafafa; border: 1px solid #d9d9d9; border-radius: 5px; background-color: rgb(45, 183, 245); color:#fff; padding:5px;">
                                        @DateTime.Now.AddDays(1).ToShortDateString()
                                    </span>
                                </strong>
                                <span class="col-md-6"><i class="fa fa-h-square" aria-hidden="true" style="transform:scale(1.3)"></i>&ensp; @item.Hospital.HospitalName</span>
                                <span class="col-md-2"><i class="fa fa-hospital-o" aria-hidden="true" style="transform:scale(1.3)"></i>&ensp; @item.Clinic.ClinicName</span>
                            </a>

                        }
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
